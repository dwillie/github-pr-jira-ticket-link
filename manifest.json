{
  "manifest_version": 2,
  "name": "Github Jira Ticket Link",
  "version": "1.0.4",

  "description": "Transforms Jira tags in PR titles into links to jira tickets",

  "content_scripts": [
    {
      "matches": ["*://github.com/*/*/pull/*", "*://github.com/*/*/pulls"],
      "js": ["background.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": [
    "storage"
  ]

}
